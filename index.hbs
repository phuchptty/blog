{{!< default}}
{{!-- The tag above means: insert everything in this file
into the {body} of the default.hbs template --}}

{{!-- The big featured header, it uses blog cover image as a BG if available --}}
<!-- <header class="site-header outer {{#if @site.cover_image}}" style="background-image: url({{@site.cover_image}}){{else}}no-cover{{/if}}"> -->
<header class="site-header outer no-cover">
    <div class="inner">
        {{> "site-nav" }}
        <div class="site-header-content">
            <h1 class="site-description">{{@site.description}}</h1>
            <div class="social-links">
                <a href="{{@site.url}}/rss/" class="social-link social-link-github" target="_blank"
                    rel="noopener"> <i class="fas fa-rss fa-sm fa-white"></i> </a>
                {{#if @labs.subscribers}}
                <a class="subscribe-button" href="#subscribe">Subscribe</a>
                {{/if}}
            </div>
        </div>
    </div>
</header>

{{!-- The main content area --}}
<main id="site-main" class="site-main outer">
    <div class="inner">

        <div class="post-feed">
            {{#foreach posts}}

            {{!-- The tag below includes the markup for each post - partials/post-card.hbs --}}
            {{> "post-card"}}

            {{/foreach}}
        </div>

    </div>
</main>